<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350px"
        android:text="GPA CALCULATOR"
        android:textSize="80px"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/e1"
        android:layout_width="250px"
        android:layout_height="120px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="550px"
        android:gravity="center"
        android:hint="Grade 1"
        android:textSize="40px" />

    <EditText
        android:id="@+id/e2"
        android:layout_width="250px"
        android:layout_height="120px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="650px"
        android:gravity="center"
        android:hint="Grade 2"
        android:textSize="40px" />

    <EditText
        android:id="@+id/e3"
        android:layout_width="250px"
        android:layout_height="120px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="750px"
        android:gravity="center"
        android:hint="Grade 3"
        android:textSize="40px" />

    <EditText
        android:id="@+id/e4"
        android:layout_width="250px"
        android:layout_height="120px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="850px"
        android:gravity="center"
        android:hint="Grade 4"
        android:textSize="40px" />

    <EditText
        android:id="@+id/e5"
        android:layout_width="250px"
        android:layout_height="120px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="950px"
        android:gravity="center"
        android:hint="Grade 5"
        android:textSize="40px" />

    <TextView
        android:id="@+id/t"
        android:layout_width="250px"
        android:layout_height="100px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1100px"
        android:gravity="center"
        android:hint="GPA"
        android:textSize="40px" />

    <Button
        android:id="@+id/b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1250px"
        android:text="Compute"
        android:textSize="40px" />
</RelativeLayout>