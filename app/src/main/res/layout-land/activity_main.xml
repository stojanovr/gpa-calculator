<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75px"
        android:text="GPA CALCULATOR"
        android:textSize="50px"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="225px"
        android:layout_marginLeft="250px"
        android:text="GRADE 1: "
        android:textSize="40px"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="325px"
        android:layout_marginLeft="250px"
        android:text="GRADE 2: "
        android:textSize="40px"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="425px"
        android:layout_marginLeft="250px"
        android:text="GRADE 3: "
        android:textSize="40px"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="525px"
        android:layout_marginLeft="250px"
        android:text="GRADE 4: "
        android:textSize="40px"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="625px"
        android:layout_marginLeft="250px"
        android:text="GRADE 5: "
        android:textSize="40px"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300px"
        android:layout_marginLeft="1000px"
        android:text="GPA: "
        android:textSize="80px"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/e1"
        android:layout_width="300px"
        android:layout_height="120px"
        android:layout_marginTop="180px"
        android:layout_marginLeft="450px"
        android:textSize="40px"
        android:inputType="number"/>

    <EditText
        android:id="@+id/e2"
        android:layout_width="300px"
        android:layout_height="120px"
        android:layout_marginTop="280px"
        android:layout_marginLeft="450px"
        android:textSize="40px"
        android:inputType="number"/>

    <EditText
        android:id="@+id/e3"
        android:layout_width="300px"
        android:layout_height="120px"
        android:layout_marginTop="380px"
        android:layout_marginLeft="450px"
        android:textSize="40px"
        android:inputType="number"/>

    <EditText
        android:id="@+id/e4"
        android:layout_width="300px"
        android:layout_height="120px"
        android:layout_marginTop="480px"
        android:layout_marginLeft="450px"
        android:textSize="40px"
        android:inputType="number"/>

    <EditText
        android:id="@+id/e5"
        android:layout_width="300px"
        android:layout_height="120px"
        android:layout_marginTop="580px"
        android:layout_marginLeft="450px"
        android:textSize="40px"
        android:inputType="number"/>

    <TextView
        android:id="@+id/t"
        android:gravity="center"
        android:layout_width="300px"
        android:layout_height="120px"
        android:layout_marginTop="300px"
        android:layout_marginLeft="1200px"
        android:textSize="60px" />

    <TextView
        android:id="@+id/warning"
        android:gravity="center"
        android:layout_width="800px"
        android:layout_height="100px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="730px"
        android:textSize="60px" />

    <Button
        android:id="@+id/b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="500px"
        android:layout_marginLeft="1000px"
        android:text="Compute GPA"
        android:textSize="40px" />
</RelativeLayout>